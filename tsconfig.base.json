{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["jest"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@visualnote/commons": ["libs/commons/src/index.ts"],
      "@visualnote/logo/*": ["libs/commons/src/assets/logo/*"],
      "@visualnote/shadcn-ui": ["libs/shadcn-ui/src/index.ts"],
      "@visualnote/shadcn-ui/*": ["libs/shadcn-ui/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
